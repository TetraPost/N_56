extends layout

block content
  div.container
  nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
    h4.white|Unit N_54
    ul.navbar-nav.ml-auto
      a.btn.btn-outline-info.pull-right(href="/articleList") Article List
  .main.container
    .row
      .col-md-12.col-md-offset-3
        h2.display-4.m-b-2 Test
        form.save(method='POST' name='formTest' enctype="multipart/form-data")
          span|Response Status: 
          span.resttext
          p
          span|Last Article: 
          span.articleAddedTxt
          hr
          div.row
            div.form-group.col-md-6
              label#articleTitle Article Title
              input#articleTitle.form-control(type='text', name='articleTitle')
              span.articleTitleError.error
            div.form-group.col-md-6
              label#articleUserList Author List
              select.dataList.form-control
              // span.articleTitleError.error
              input#user.user.form-control(type='hidden', name='userId')
              span.authorError.error
          div.form-group
            label#articleContent Article Content
            input#articleContent.form-control(type='hidden', name='articleContent', rows='3')
            div#toolbar
            div.editor
            span.articleContentError.error
            // editor
            //div#toolbar
            //div#editor
          div.form-group
          button.btn.btn-primary.specialBtn(type='submit') Send
        hr
        div.userList